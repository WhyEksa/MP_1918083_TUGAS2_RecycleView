<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/LinearLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout Manager"/>
    <Button
        android:id="@+id/GridLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid Layout Manager"/>
    <Button
        android:id="@+id/StaggeredGridLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staggered Layout Manager"/>
</LinearLayout>